	public Nominee login(String nomineeName, String password) throws AuthException {
	    // Check if the nominee exists in the database
	    Nominee nominee = nomineeRepository.findBynomineeName(nomineeName);

	    if (nominee != null) {
	       
	        if (nominee.getPassword().equals(password)) {
	            return nominee; 
	        } else {
	            throw new AuthException("Incorrect password");
	        }
	    } else {
	        throw new AuthException("Invalid nomineename");
	    }
	}
	@Override
	public List<Nominee> getAllNomineesByOwner(String owner) {
		return  nomineeRepository.findByOwner(owner);
	}
	@Override
	public Nominee UpdateNomineeProfile(long id, Nominee nominee) {
	
		
		    Optional<Nominee> optionalNominee = nomineeRepository.findById(id);
		    if (optionalNominee.isPresent()) {
		        Nominee existingnominee = optionalNominee.get();
		        existingnominee.setnomineeName(nominee.getnomineeName());
		        existingnominee.setEmail(nominee.getEmail());
		        existingnominee.setPassword(nominee.getPassword());
		        existingnominee.setMobileNumber(nominee.getMobileNumber());
		        existingnominee.setnomineeType(nominee.getnomineeType());
		        existingnominee.setOwner(nominee.getOwner());
		        existingnominee.setGender(nominee.getGender());
		        existingnominee.setFatherName(nominee.getFatherName());
		        existingnominee.setDob(nominee.getDob());
		        existingnominee.setPanNumber(nominee.getPanNumber());
		        existingnominee.setAadhar(nominee.getAadhar());
		        existingnominee.setVoterId(nominee.getVoterId());
		        existingnominee.setPresentAddress(nominee.getPresentAddress());
		        existingnominee.setPermanentAddress(nominee.getPermanentAddress());
		        existingnominee.setRelation(nominee.getRelation());
		        return nomineeRepository.save(existingnominee);
		    }
		    return null;
		}

	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	

}
